<div class="card blog-card">
    <div class="card-body">
        <h3 class="card-title">{{title}}</h3>
        <p class="hidden" id="blog-id">{{id}}</p>
        <p class="card-content">{{description}}</p>
    </div>
    <div class="card-footer">
        Created: {{user.name}} on {{format_date date_created}}
    </div>
</div>


{{#if comments.length}}
<div class="show-comments">
    <h3>Comments:</h3>
    {{#each comments as |comments|}}
    <div class="card comment-card">
        <div class="card-header">
            {{comments.commentor}} on {{format_date date_created}}
        </div>
        <div class="card-body">
            <p>{{comments.comment}}</p>
        </div>
        <div class="card-footer">
            <button class="btn" type="button" data-id={{comments.id}}>Delete Comment</button>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}
<div class="add-comment-btn">
    <button class="btn" id="new-comment" type="button">Add Comment</button>
</div>

<script src="/js/comment.js"></script>